<!-- views/donations-new.handlebars -->

<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>New Donation</h3>
                    <div class="lead">
                        Charity Name: {{Charity.title}}
                    </div>
                </div>
                <div class="card-text">
                    <form action="/charities/{{charity.id}}/donations" method="post">
                        {{> donations-form}}
                        <div class="form-group">
                          <label for="title">Amount</label>
                          <input name="amount" class="form-control" placeholder="0" />
                        </div>
                        <div class="text-right">
                            <a href="/" class='text-muted mr-2'>Cancel</a>
                            <button type="submit" class="btn btn-primary" name="button">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
