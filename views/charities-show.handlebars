<!-- views/charities-show.handlebars -->
<div class="row mt-4">
  <div class="col-lg-6">
    <img class="img-fluid w-100 rounded mb-3" src="{{charity.imgUrl}}" alt="Card image cap">
    <h3>{{charity.title}}</h3>
    <div class="lead">{{charity.desc}}</div>
    <br>
    <div class="row">
      <div class="col-4">
        <a href="/charities/{{this.id}}/donations/new" class="btn btn-primary">Donate Now</a>
      </div>
      <div class="col-4">
        <a href="/charities/{{this.id}}" class="btn btn-gray">More Info</a>
      </div>
      <div class="col-4">
        <a href="/charities/{{this.id}}/edit" class="btn btn-gray">Edit Charity</a>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="d-flex justify-content-between">
        <b>Donators ({{charity.Donations.length}})</b>
        <a href="/charities/{{charity.id}}/donations/new" class="btn btn-primary btn-sm">Donate</a>
    </div>
    <div class="list-group mt-4">
      {{#each charity.Donations}}
      <div class="list-group-item">
        {{this.name}}
      </div>
      {{/each}}
    </div>
  </div>

</div>
