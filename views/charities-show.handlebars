<!-- views/charities-show.handlebars -->
<div class="row mt-4">
  <div class="col-lg-6">
    <div class="d-flex justify-content-between">
        <b>Donations ({{charity.Donations.length}})</b>
        <a href="/charities/{{charity.id}}/donations/new" class="btn btn-primary btn-sm">Donate</a>
    </div>
  </div>

  <div class="list-group mt-4">
    {{#each charity.Donations}}
    <div class="list-group-item">
      {{this.name}}
    </div>
    {{/each}}
  </div>
</div>
