<!-- views/partials/charities-form.handlebars -->

<div class="form-group">
  <label for="title">Title</label>
  <input name="title" class="form-control" placeholder="Name of charity" value="{{charity.title}}" />
</div>
<div class="form-group">
  <label for="desc">Description</label>
  <textarea name="desc" class="form-control" placeholder="A description of your charity.">{{charity.desc}}</textarea>
</div>
<div class="form-group">
  <label for="imgUrl">Image Url</label>
  <input name="imgUrl" class="form-control" placeholder="" value="{{charity.imgUrl}}"/>
</div>
